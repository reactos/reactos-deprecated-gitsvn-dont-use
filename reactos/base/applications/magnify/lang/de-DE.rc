LANGUAGE LANG_GERMAN, SUBLANG_NEUTRAL

IDC_MAGNIFIER MENU
BEGIN
    POPUP "&Datei"
    BEGIN
        MENUITEM "&Beenden", IDM_EXIT
        MENUITEM "&Optionen", IDM_OPTIONS
        MENUITEM SEPARATOR
        MENUITEM "&Über", IDM_ABOUT
    END
END

IDC_MAGNIFIER ACCELERATORS
BEGIN
